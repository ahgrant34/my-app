{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "github_link": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "date_posted": {
      "type": "date"
    },
    "date_edited": {
      "type": "date"
    },
    "card_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "article_banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "via": "articles",
      "collection": "category"
    }
  }
}
